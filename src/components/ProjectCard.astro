---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---
<a href={link} class="group block">
  <div class="bg-white rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow duration-300">
    <div class="relative h-48 overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
    </div>
    <div class="p-6">
      <h3 class="text-xl font-bold mb-2">{title}</h3>
      <p class="text-gray-600">{description}</p>
    </div>
  </div>
</a>