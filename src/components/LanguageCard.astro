---
interface Props {
  name: string;
  description: string;
  features: string[];
  color: string;
}

const { name, description, features, color } = Astro.props;
---
<div class="bg-white rounded-xl shadow-xl p-6 hover:transform hover:-translate-y-2 transition-all duration-300" data-aos="fade-up">
  <div class={`w-16 h-16 ${color} rounded-lg mb-4 flex items-center justify-center`}>
    <span class="text-2xl font-bold text-white">{name.charAt(0)}</span>
  </div>
  <h3 class="text-2xl font-bold mb-3">{name}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <ul class="space-y-2">
    {features.map(feature => (
      <li class="flex items-center">
        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        {feature}
      </li>
    ))}
  </ul>
</div>