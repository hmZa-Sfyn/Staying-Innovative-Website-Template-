---
interface Props {
  code: string;
  title: string;
}

const { code, title } = Astro.props;
---
<div class="bg-neutral rounded-lg overflow-hidden shadow-lg">
  <div class="bg-neutral-light px-6 py-3 flex items-center justify-between">
    <span class="text-white font-mono text-sm font-light">{title}</span>
    <div class="flex gap-2">
      <div class="w-3 h-3 rounded-full bg-red-400"></div>
      <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
      <div class="w-3 h-3 rounded-full bg-green-400"></div>
    </div>
  </div>
  <pre class="p-6 text-white overflow-x-auto font-mono text-sm font-light">
    <code class="language-ruby">{code}</code>
  </pre>
</div>