---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - StayingInnovative">
  <!-- Header Section -->
  <header class="bg-gradient-to-r from-teal-500 to-green-600 text-white py-8">
    <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
      <h1 class="text-4xl font-bold">Contact Us</h1>
      <nav class="mt-4 md:mt-0">
        <ul class="flex space-x-4">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li><a href="/blog" class="hover:underline">Blog</a></li>
          <li><a href="/security" class="hover:underline">Security</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Breadcrumbs -->
  <nav class="bg-gray-100 py-3 px-4">
    <div class="container mx-auto">
      <a href="/" class="text-blue-500 hover:underline">Home</a>
      <span class="mx-2">/</span>
      <span>Contact</span>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Contact Information -->
      <section>
        <h2 class="text-3xl font-bold mb-6">Get in Touch</h2>
        <p class="text-gray-600 leading-loose mb-6">
          We love to hear from you! Whether you have a question, suggestion, or just want to connect, feel free to reach out to us through any of the channels below.
        </p>

        <div class="bg-gray-50 border-l-4 border-gray-500 p-4 mb-6">
          <h3 class="text-xl font-semibold mb-3">Email</h3>
          <p class="text-gray-700 mb-3">
            Reach us directly at: 
            <a href="mailto:contact@stayinginnovative.com" class="text-blue-500 hover:underline">contact@stayinginnovative.com</a>
          </p>

          <h3 class="text-xl font-semibold mb-3">Phone</h3>
          <p class="text-gray-700 mb-3">
            You can call us at: 
            <a href="tel:+1234567890" class="text-blue-500 hover:underline">+1 (234) 567-890</a>
          </p>

          <h3 class="text-xl font-semibold mb-3">Social Media</h3>
          <p class="text-gray-700 mb-3">
            Follow us on our social media platforms for updates and more:
          </p>
          <ul class="flex space-x-4">
            <li><a href="https://github.com" class="text-blue-500 hover:underline">GitHub</a></li>
            <li><a href="https://www.youtube.com" class="text-red-500 hover:underline">YouTube</a></li>
            <li><a href="https://www.patreon.com" class="text-blue-700 hover:underline">Patreon</a></li>
          </ul>
        </div>
      </section>

      <!-- Contact Form -->
      <section>
        <h2 class="text-3xl font-bold mb-6">Send Us a Message</h2>
        <form action="#" method="POST" class="space-y-6">
          <div>
            <label for="name" class="block text-lg font-medium text-gray-700">Full Name</label>
            <input type="text" id="name" name="name" required class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500" />
          </div>

          <div>
            <label for="email" class="block text-lg font-medium text-gray-700">Email Address</label>
            <input type="email" id="email" name="email" required class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500" />
          </div>

          <div>
            <label for="message" class="block text-lg font-medium text-gray-700">Message</label>
            <textarea id="message" name="message" rows="5" required class="w-full p-3 mt-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500"></textarea>
          </div>

          <button type="submit" class="w-full bg-teal-600 text-white py-3 rounded-lg hover:bg-teal-700 transition-colors">
            Send Message
          </button>
        </form>
      </section>
    </div>
  </div>

</Layout>
