---
import Layout from '../../layouts/Layout.astro';
const newsItems = await Astro.glob('./items/*.{md,mdx}');
---

<Layout title="News - StayingInnovative">
  <!-- Header Section -->
  <header class="bg-gradient-to-r from-blue-500 to-purple-600 text-white py-8">
    <div class="container mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
      <h1 class="text-4xl font-bold">Latest News</h1>
      <nav class="mt-4 md:mt-0">
        <ul class="flex space-x-4">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li><a href="/community" class="hover:underline">Community</a></li>
          <li><a href="/contact" class="hover:underline">Contact</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Breadcrumbs -->
  <nav class="bg-gray-100 py-3 px-4">
    <div class="container mx-auto">
      <a href="/" class="text-blue-500 hover:underline">Home</a>
      <span class="mx-2">/</span>
      <span>News</span>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12">
    <div class="space-y-8">
      <!-- News Items -->
      {newsItems.map(item => (
        <article class="flex items-center bg-white rounded-lg shadow-md overflow-hidden">
          <img src={item.frontmatter.image || '/images/default-news.jpg'} alt="News Image" class="w-1/3 h-auto object-cover">
          <div class="p-6">
            <h2 class="text-2xl font-bold mb-2">{item.frontmatter.title}</h2>
            <p class="text-gray-600 mb-4">{item.frontmatter.excerpt || 'No description available.'}</p>
            <a href={item.url} class="text-purple-600 hover:text-purple-700">Read More â†’</a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
