---
import Layout from '../layouts/Layout.astro';
import CodeExample from '../components/CodeExample.astro';

const examples = [
  {
    title: "Type-safe Classes",
    code: `class Person
  def initialize(name: String, age: Integer)
    @name = name
    @age = age
  end

  def greet: String
    "Hello, I'm #{@name} and I'm #{@age} years old!"
  end
end`
  },
  {
    title: "Pattern Matching",
    code: `def process_data(data)
  case data
  in { type: "user", name: String => name }
    puts "Processing user: #{name}"
  in { type: "order", id: Integer => id }
    puts "Processing order: #{id}"
  else
    puts "Unknown data type"
  end
end`
  }
];
---

<Layout title="Examples - RubyScript">
  <main class="pt-24">
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-light text-neutral mb-16 text-center">Code Examples</h1>
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {examples.map(example => (
            <CodeExample title={example.title} code={example.code} />
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>